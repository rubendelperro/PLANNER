
#!/bin/sh

# Modern Husky pre-commit hook (avoid legacy sourcing that fails in Husky v10+)
# Run lint-staged using the local dependency. Use --silent to reduce noise in CI.
npx --no -- lint-staged --verbose

if [ $? -eq 0 ]; then
  echo "✔ pre-commit checks passed"
else
  echo "✖ pre-commit checks failed"
  exit 1
fi
